{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["types/**/*.d.ts", "src/**/*.ts", "tests/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
